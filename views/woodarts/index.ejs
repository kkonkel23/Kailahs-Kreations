<%- include('../partials/header') %>

<h3>Gallery</h3>

<a href="/woodarts/new" class="btn btn-primary">Add New Piece</a>

<% woodarts.forEach(woodart=> { %>
    <div class="card bg-dark text-white" style="width: 20rem;">
        <img src="<%= woodart.imageUrl %>" class="card-img" alt="...">
        <div class="card-img-overlay">
            <h5 class="card-title"><%= woodart.title %></h5>
            <p class="card-text">Created: <%= woodart.created %></p>
            <a href="/woodarts/<%= woodart._id%>" class="btn btn-primary">Details</a>
        </div>
    </div>
<% }) %>



<%- include('../partials/footer') %>